{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": "./",
    // 找不到模块 @/xxx 或其相应的类型声明
    "paths": {
      "@/*": [
        "src/*"
      ],
    },
  },
  // 指定要编译的路径列表
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "vite.config.ts"
  ],
  // 指定要排除的、不编译的文件
  "exclude": [
    "node_modules",
    "dist",
    "**/*.js"
  ],
}